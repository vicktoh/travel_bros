{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "out",
    "frameworksBackend": {
      "region": "europe-west1",
      "maxInstances": 2
    },
    "redirects": [
      {
        "source": "/bookings",
        "destination": "/bookings.html",
        "type": 301
      },
      {
        "source": "/drivers",
        "destination": "/drivers.html",
        "type": 301
      },
      {
        "source": "/search",
        "destination": "/search.html",
        "type": 301
      },
      {
        "source": "/drivers/signup",
        "destination": "/drivers/signup.html",
        "type": 301
      },
      {
        "source": "/drivers/signin",
        "destination": "/drivers/signin.html",
        "type": 301
      }

    ],
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
